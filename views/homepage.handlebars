<!-- Loop over each object in the articles array -->
{{#each articles as |article| }}

<div class="card mb-2">
            <div class="card-body ms-3">
                
              <h5 class="card-title bg-primary text-light p-3"><a class='text-light' href="/articles/{{id}}">{{article.title}}</a></h5>
              <div class="card-header">
                Posted by {{user.user_name}} on {{format_date article.createdAt}}
              </div>
              <p class="card-text ps-4 pt-4">{{article.content}}</p>
            </div>
          </div>
{{/each}}


