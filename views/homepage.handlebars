<h2>View post</h2>

{{#each post as |post| }}


<div class="card mb-2">
  <div class="card-body ms-3">
    
  <h5 class="card-title bg-primary text-light p-3"><a class='text-light' href="/post/{{id}}">{{post.title}}</a></h5>
  <div class="card-header">
    Posted by {{post.user_name}} on {{format_date post.createdAt}}
  </div>
  {{!-- <p class="card-text ps-4 pt-4">{{post.content}}</p> --}}
  {{#if post.comments.length}}
<p>{{post.comments.length}} comments</p>
{{/if}}
  </div>
  </div>
{{/each}}

